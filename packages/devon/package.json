{
    "name": "@evilkiwi/devon",
    "version": "2.2.0",
    "description": "Docker-based Monorepo Local Development CLI",
    "type": "module",
    "files": [
        "bin",
        "build"
    ],
    "exports": {
        ".": "./build/index.mjs",
        "./cli": "./bin/devon.mjs"
    },
    "bin": "./bin/devon.mjs",
    "main": "./build/index.cjs",
    "types": "./build/index.d.ts",
    "license": "GPL-3.0-only",
    "author": {
        "name": "Evil Kiwi Limited",
        "url": "https://evil.kiwi",
        "email": "support@evil.kiwi"
    },
    "homepage": "https://github.com/evilkiwi/devon",
    "bugs": {
        "url": "https://github.com/evilkiwi/devon/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/evilkiwi/devon.git"
    },
    "keywords": [
        "docker",
        "dev",
        "environment",
        "development",
        "ssl",
        "cli",
        "local",
        "monorepo"
    ],
    "scripts": {
        "clean": "rimraf build",
        "prepack": "pnpm run build",
        "build": "pnpm run clean && pnpm run compile",
        "compile": "NODE_ENV=production unbuild",
        "fetch": "wget -O - https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json | json2ts --style.singleQuote > ./src/types/generated.ts"
    },
    "dependencies": {
        "@oclif/core": "^1.16.1",
        "colorette": "^2.0.19",
        "commander": "^9.4.0",
        "conf": "^10.2.0",
        "consola": "^2.15.3",
        "docker-compose": "^0.23.17",
        "fs-extra": "^10.1.0",
        "glob": "^8.0.3",
        "handlebars": "^4.7.7",
        "inquirer": "^9.1.1",
        "is-wsl": "^2.2.0",
        "js-yaml": "^4.1.0",
        "ora": "^6.1.2",
        "sudo-prompt": "^9.2.1",
        "ts-node": "^10.9.1",
        "typescript": "4.8.3"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/glob": "^8.0.0",
        "@types/inquirer": "^9.0.1",
        "@types/js-yaml": "^4.0.5",
        "@types/node": "^16.11.58",
        "json-schema-to-typescript": "^11.0.2",
        "rimraf": "^3.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3",
        "unbuild": "^0.8.10"
    },
    "engines": {
        "node": "^16.0.0 || ^17.0.0 || ^18.0.0"
    }
}
