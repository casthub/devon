{
    "name": "@evilkiwi/devon-compose-spec",
    "version": "1.0.0",
    "description": "Docker Compose TypeScript types generated from JSONSchema",
    "type": "module",
    "files": [
        "bin",
        "build"
    ],
    "exports": {
        ".": "./build/index.mjs"
    },
    "main": "./build/index.cjs",
    "types": "./build/index.d.ts",
    "license": "GPL-3.0-only",
    "author": {
        "name": "Evil Kiwi Limited",
        "url": "https://evil.kiwi",
        "email": "support@evil.kiwi"
    },
    "homepage": "https://github.com/evilkiwi/devon",
    "bugs": {
        "url": "https://github.com/evilkiwi/devon/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/evilkiwi/devon.git"
    },
    "keywords": [
        "docker",
        "compose",
        "types",
        "typescript"
    ],
    "scripts": {
        "clean": "rimraf build",
        "prepack": "yarn build",
        "build": "yarn clean && yarn compile",
        "compile": "NODE_ENV=production unbuild",
        "fetch": "wget -O - https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json | json2ts --style.singleQuote > ./src/index.ts"
    },
    "devDependencies": {
        "@types/node": "^16.11.34",
        "json-schema-to-typescript": "^10.1.5",
        "rimraf": "^3.0.2",
        "tslib": "^2.4.0",
        "typescript": "^4.6.4",
        "unbuild": "^0.7.4"
    }
}
